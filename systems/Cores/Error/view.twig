{% do document.setTitle("Caught an Error!") %}
{% do document.head.append([
	{
		tagName: "link",
		attribute: {
			rel: "stylesheet",
			href: "/assets/css/__.css"|assets
		}
	}
]) %}
{% do document.head.append([
	{
		tagName: "link",
		attribute: {
			rel: "stylesheet",
			href: "/assets/vendor/bootstrap/css/bootstrap.min.css"|assets
		}
	}
]) %}


{% do document.addAttr("lang", "en") %}
{% do document.body.addClass("text-bg-dark") %}
{% do document.body.append([
	{
		tagName: "script",
		attribute: {
			type: "text/javascript",
			src: "/assets/vendor/jquery/jquery.min.js"|assets
		}
	}
]) %}
{% do document.body.append([
	{
		tagName: "script",
		attribute: {
			type: "text/javascript",
			src: "/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"|assets
		}
	}
]) %}
{% do document.body.append([
	{
		tagName: "script",
		attribute: {
			type: "text/javascript",
			src: "/assets/js/__.js"|assets
		}
	}
]) %}


<div class="container px-md-5 pt-5">
    <h1 class="fs-1 fw-bold text-danger">Caught an Error</h1>
    <section class="border-5 border-start border-danger ps-3 pt-2 pb-1 mb-3 bg-danger bg-opacity-10">
        <header>
            <h2 class="">{{error.title??"Title Not Available"}}</h2>
        </header>
        <article>
            <p class="mb-0">{{error.message??"Message Not Available"}}</p>
        </article>
    </section>
    <div class="row">

        <div class="col-12 col-lg-6 mb-3">
            <div>
                {{error.file}}:{{error.line}}
                <div class="px-1 py-1">
                    {{error.snippet.render()}}
                </div>
            </div>
            <p>Did you fix the error?
                <button class="btn btn-outline-secondary rounded-pill text-sm ms-3" type="button" onclick="(() => refreshWindow())()">REFRESH</button>
            </p>
        </div>

        <div class="col-6">
            <div>
                <h2>Stack Trace</h2>
                <ol type="number" class="tracer-wrapper">
                    {% for item in error.tracers %}
                        <li>
                            <span>{{item.file??item.class}}</span>
                            {{item.line?":"~item.line}}
                            {{item.function}}
                        </li>
                    {% endfor %}
                </ol>
            </div>
        </div>
    </div>
<div class="animation-shadow"></div>
